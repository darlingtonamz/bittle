<p id="notice"><%= notice %></p>

<h1>Listing Invoices</h1>

<table>
  <thead>
    <tr>
      <th>Token</th>
      <th>Business</th>
      <th>Item</th>
      <th>Cost</th>
      <th>Interest</th>
      <th>Duration</th>
      <th>Due time</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.token %></td>
        <td><%= invoice.business %></td>
        <td><%= invoice.item %></td>
        <td><%= invoice.cost %></td>
        <td><%= invoice.interest %></td>
        <td><%= invoice.duration %></td>
        <td><%= invoice.due_time %></td>
        <td><%= invoice.status %></td>
        <td><%= link_to 'Show', invoice %></td>
        <td><%= link_to 'Edit', edit_invoice_path(invoice) %></td>
        <td><%= link_to 'Destroy', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

